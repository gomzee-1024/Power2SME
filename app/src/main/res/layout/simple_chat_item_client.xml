<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/simple_chat_item_root_client"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#00000000"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:gravity="end">

    <TextView
        android:id="@+id/simple_item_textview_client"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="240dp"
        android:text="Hello,How may I help you?"
        android:background="@drawable/my_chat_text_bg"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:padding="8dp"
        android:layout_marginLeft="4dp"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/simple_item_cirle_image_client"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="4dp"/>
</LinearLayout>