<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:gravity="center_vertical"
    android:orientation="vertical">
    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" 
	    android:gravity="center_vertical"
	    android:layout_marginBottom="@dimen/space_above_divider"
	    android:layout_marginTop="@dimen/space_below_divider"
	    android:orientation="horizontal">
	    <ImageView
	        style="@style/Style_ImageView_listItemBullets"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" 
	        />
	
	    <TextView
	        android:id="@+id/TextView_newsListItem"
	        style="@style/Style_TextView_body1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:singleLine="true"
	        android:text="this is test account updates" 
	        />
	</LinearLayout>	
</LinearLayout>
