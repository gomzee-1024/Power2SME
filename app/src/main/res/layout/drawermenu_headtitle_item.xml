<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorAccent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/left_pic"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:scaleType="fitXY"
            android:visibility="visible"
            android:src="@drawable/sme"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="16dip">
            <TextView
                android:id="@+id/text_main_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/left_pic"
                style="@style/Style_TextView_Subhead1"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="Acting On Behalf of"
                />
            <TextView
                android:id="@+id/TextView_emailId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/left_pic"
                android:layout_below="@+id/text_main_name"
                style="@style/Style_TextView_Subhead1"
                android:textColor="@color/white"
                android:text="Sarovaram Industries"
                android:layout_marginTop="10dip"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/LinearLayout_switchParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dip"
        android:gravity="center_vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sme_icon"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SWITCH SME"
            android:textColor="@color/white"
            android:layout_marginLeft="16dip"
            android:layout_weight="1"
            />

        <ImageButton
            android:id="@+id/imageButton_switchSME"
            android:layout_width="50dip"
            android:layout_height="wrap_content"
            android:src="@drawable/switch_icon"
            android:background="@null"
            />
    </LinearLayout>
</LinearLayout>

